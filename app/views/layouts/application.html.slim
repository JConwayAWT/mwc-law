javascript:
  $(document).ready(function(){
    $(".location-option").click(function(){
      $("#selected").removeAttr("id");
      $(this).attr("id", "selected");

      $(".city-name").text($(this).data().cityName)
      $(".address-line-one").text($(this).data().ad1)
      $(".address-line-two").text($(this).data().ad2)
      $(".address-line-three").text($(this).data().ad3)

      current_file_name = $(this).data().fileName;

      $(".location-images").find(".displaying").removeClass("displaying");
      $(".location-images").find("#" + current_file_name).addClass("displaying");

    });
  });