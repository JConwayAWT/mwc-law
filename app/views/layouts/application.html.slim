doctype html
html
  head
    title McCabe, Weisberg & Conway
    = stylesheet_link_tag     'application', media: 'all'
    = javascript_include_tag  'application'
    script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDGKR61pjgohpnX79w-sFWXYXM29ZDh4M0"
    = csrf_meta_tags

    meta name="Description" content="McCabe, Weisberg, and Conway offers legal representation for the mortgage banking industry in the mid-Atlantic region and Florida."

  body
    #full-wrapper
      - if Alert.any?
        .row.padless.sitewide-alert-row style="margin-left: 0px; margin-right: 0px;"
          .col-md-12.ep-padding
            - Alert.all.each do |alert|
              b Notice: 
              .sitewide-alert-text = simple_format(alert.body.html_safe)


      - if notice
        .row.padless.sitewide-notice-row style="margin-left: 0px; margin-right: 0px;"
          .col-md-12.ep-padding
            b Notice:
            .sitewide-notice-text = notice

      - if alert
        .row.padless.sitewide-alert-row style="margin-left: 0px; margin-right: 0px;"
          .col-md-12.ep-padding
            b Alert:
            .sitewide-alert-text = alert

      #full-header
        nav.navbar#no-border-radius.gray-bottom-border role="navigation"
          .container-fluid.ep-padding
            .navbar-header
              button.navbar-toggle.collapsed type="button" data-toggle="collapse" data-target="#mwc-navbar" aria-expanded="false" aria-controls="navbar"
                span.sr-only Toggle Navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              .navbar-brand
                = link_to "/", class: "mwc-logo-link"
                  = image_tag "mwc-logo-vector-transparent.png", class: "mwc-logo-image-file"
            .navbar-collapse.collapse#mwc-navbar aria-expanded="false"
              ul.nav.navbar-nav.navbar-right#navbar-link-margin
                li
                  a.single-header-link#firm-link href="/the_firm" The Firm
                li
                  a.single-header-link#offices-link href="/offices" Offices
                li
                  a.single-header-link#shareholders-link href="/shareholders" Shareholders
                li
                  a.single-header-link#areas-link href="/practice_areas" Practice Areas
                li
                  a.single-header-link#mae-link href="/fannie_mae" Fannie Mae
                li
                  a.single-header-link#mac-link href="/freddie_mac" Freddie Mac
                li
                  a.single-header-link#careers-link href="/employment_applications" Careers

                /!  a.single-header-link#legal_analysis-link href="/legal_analysis" Client Blasts
                /! li

      #full-content
        .container-fluid#body-container
          = yield

      #full-footer
        .footer#footer
          .container-fluid
            .row.ep-padding.soft-top-space
              .col-md-8
                .row.paddless
                  .col-md-12.padless
                    = link_to image_tag( "mortgage_bankers_association.png", id: "mortgage_bankers_association", class: "association-image"), "https://www.mba.org/" , target: "_blank"
                    = link_to image_tag( "USFN_logo.png", id: "USFN_logo", class: "association-image"), "https://www.usfn.org/" , target: "_blank"   
                    = link_to image_tag( "american_legal_and_financial_network.png", id: "american_legal_and_financial_network", class: "association-image"), "https://www.alfn.org/" , target: "_blank"
                    = link_to image_tag( "WBE_Seal_REVERSE.png", class: "association-image", id: "WBE_Seal_REVERSE" ), "https://www.wbenc.org/" , target: "_blank"
                    = link_to image_tag( "AISLE_FM_Logo.png", class: "association-image", id: "AISLE_FM_Logo" ), "https://www.aisleinstitute.org/" , target: "_blank"
                .row.padless
                  .col-md-12.padless
                    p
                    .disclaimer Portions of this site Â©#{Time.now.year} by McCabe, Weisberg & Conway, LLC.  1420 Walnut Street, Suite 1501, Philadelphia, PA 19102
                    .disclaimer This site does not collect any information from viewers.  To view our privacy policy, #{link_to "click here", asset_path("privacy_policy.pdf"), target: "_blank", style: "color: white; text-decoration: underline"}.
                    br
